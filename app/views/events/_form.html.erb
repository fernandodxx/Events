<%= form_with model: event do |f| %>
  <% if @event.errors.any? %>
    <div>
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= f.label :name, "Event name" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description, "Event description" %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :date, "Event date" %>
    <%= f.date_field :date %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>